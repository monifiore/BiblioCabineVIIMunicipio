@layout MainLayout
@page  "/suggerimento/dettaglio"
@inherits DettaglioBase
@using LegArtiModel

<div class="body-content-legarti">

    <div class="titolo">
        <label id="lblTitolo">I miei suggerimenti</label>
    </div>


    <div class="content-button-aggiungi">
        <MudItem xs="4" sm="12" md="6" Class="box-left-suggerimento">
            <a href="/suggerimento/index" style="visibility:hidden"> <i class="fa fa-arrow-left fa-2x"></i></a>
        </MudItem>
        <MudItem xs="4" sm="12" md="6" Class="box-right-suggerimento">
            <button type="button" @onclick="@(() => AggiungiSuggerimento())" class="button-aggiungi-suggerimento">Aggiungi un suggerimento</button>
        </MudItem>
    </div>


    <div class="box-container-suggerimento">
        @if (listaSuggerimenti != null)
        {
            @if (listaSuggerimenti.Count > 0)
            {
                foreach (SuggerimentoModel single in listaSuggerimenti)
                {
                    <MudCard Class="box results">
                        <MudItem xs="6" sm="12" md="6" Class="box-left-suggerimento">
                            <MudCardContent>
                                <MudText Typo="Typo.h5">
                                    <MudAvatar Color="Color.Warning">
                                        <i class="fa fa-user fa-3x" id="fa-icon-dettagliosuggerimento-grande"></i>
                                        <i class="fa fa-user" id="fa-icon-dettagliosuggerimento-piccola" style="display:none"></i>
                                    </MudAvatar>
                                </MudText>
                                <MudText Typo="Typo.body2">
                                    @single.NomeVisualizzato <br />
                                </MudText>
                                <MudText Typo="Typo.body2">
                                    @single.DataInserimento.ToString("dd/MM/yyyy")
                                </MudText>

                            </MudCardContent>
                        </MudItem>
                        <MudItem xs="6" sm="12" md="6" Class="box-right-suggerimento">
                            <MudText Typo="Typo.body1">
                                @single.Titolo
                            </MudText>
                            <MudText Typo="Typo.body2">
                                @single.Testo
                            </MudText>
                            <MudCardActions>
                                <button type="button" class="button-dett-suggerimento" @onclick="(() => CancellaSuggerimento(single.IDSuggerimento))">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </MudCardActions>
                        </MudItem>
                    </MudCard>
                }
            }
            else
            {
                <div class="div-center">
                    <MudInputLabel> Non ci sono suggerimenti da mostrare</MudInputLabel>
                </div>
            }
        }
    </div>
</div>


