@inherits MainLayoutBase
@using MudBlazor

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<CascadingValue Value="this">
    @ChildContentMain

    <div id="body">
        <MudAppBar Fixed="false" id="navbar-top">
            <MudItem xs="3" sm="3" md="6" lg="6" Class="transparent-boxes">
                <MudPaper Class="d-flex justify-start mud-width-full transparent-boxes">
                    <MudButton Color="Color.Transparent" ButtonType="ButtonType.Button">
                        <a href="/"> <img src="/image/legarti_logotipo.svg" alt="legarti logo" id="legarti-logo-header" /> </a>
                    </MudButton>
                </MudPaper>
            </MudItem>
            <MudItem xs="9" sm="9" md="6" lg="6" Class="transparent-boxes menu-desktop">
                <MudPaper Class="d-flex justify-end mud-width-full transparent-boxes">
                    <!--- ACTUAL MENU BUTTON -->
                    @*<MudButton Color="Color.Transparent" ButtonType="ButtonType.Button">
                        <MenuTop></MenuTop>
                    </MudButton>*@

                    <!-- NEW MENU BUTTON -->
                    <MudButton Color="Color.Transparent" ButtonType="ButtonType.Button">
                        <MudIconButton Icon="@Icons.Material.Filled.Menu" aria-label="menu icon" Color="Color.Primary" OnClick="@ToggleDrawer">
                        </MudIconButton>
                    </MudButton>
                </MudPaper>
            </MudItem>
        </MudAppBar>
        <MudDrawer @bind-Open="@open" Elevation="2" Variant="@DrawerVariant.Responsive">
            <MenuTop></MenuTop>
        </MudDrawer>





        <MudDialog ClassContent="dialog-loading" Style="margin-bottom:5em">
            <DialogContent>
                Dialog Content
            </DialogContent>
        </MudDialog>
        @Body
    </div>
</CascadingValue>


@code{

    bool open = false;
    public int spacing { get; set; } = 0;

    void ToggleDrawer()
    {
        open = !open;
    }

}